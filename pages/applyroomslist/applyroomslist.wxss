/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 1rpx solid #999;
}

.userinfo-nickname {
  color: #aaa;
  font-weight: 100;
}

.icon {
  margin-right: 20px;
  vertical-align: middle;
  width:20px;
  height: 20px;
}

.weui-cell  {
  padding: 10rpx 40rpx;
}

.btn-line {
  background-color: transparent;
  font-size: 10px;
  border-radius: 10rpx;
}
