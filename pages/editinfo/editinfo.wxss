.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 1rpx solid #ccc;
}

icon{
    margin-right: 13px;
}
.icon-box{
    margin: 8px 0 15px 0;
    padding: 8px 15px;
    display: flex;
    align-items: center;
    background-color: #fff;
}
.icon-box__ctn{
    flex-shrink: 100;
}
.icon-box__title{
    font-size: 20px;
}
.icon-box__desc{
    margin-top: 3px;
    font-size: 12px;
    color: #E64340;
}
.icon-box__info{
    margin-top: 3px;
    font-size: 12px;
    color: #0faeff;
}
.icon-box__success{
    margin-top: 3px;
    font-size: 12px;
    color: #06c003;
}
.icon_sp_area {
    margin-top: 10px;
    text-align: left;
}

.head-title {
  position: relative;
  margin-bottom: 20px;
  font-size: 18px;
  color: #666;
  text-align: center;
}
.head-title:before {
  content: '';
  position: absolute;
  bottom: -15px;
  width: 0;
  height: 0;
  left: 50%;
  margin-left: -5px;
  border-color: #ddd #f8f8f8  #f8f8f8 #f8f8f8;
  border-style: solid;
  border-width: 5px;
  background-color: #ddd;
}
.head-title:after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: -5px;
  width: 30%;
  height: 1px;
  margin-left: -15%;
  background-color: #ddd;
  -webkit-transform: scale3d(1,.3, 1);
  transform: scale3d(1,.3, 1);
}

.text-center {
  text-align: center;
}

.help-tips {
  display: inline-block;
  width: 18px;
  height: 18px;
  line-height: 18px;
  margin-left: 5px;
  vertical-align: middle;
  border: 1px solid #aaa;
  border-radius: 50%;
  font-size: 12px;
  color: #aaa;
  text-align: center;
}

