.topic-detial {
  padding-bottom: 120rpx;
}

/*
 *  用户头像
 */
 .topic-nickname {
   float: left;
   font-size: 13px;
   margin: 0 15rpx 0 0;
   max-width: 400rpx;
   color: #888;
   white-space: nowrap;
   text-overflow: ellipsis;
   overflow: hidden;
 }

 .topic-sex {
   float: left;
   margin-top: 4rpx;
 }

 .topic-sex image {
   width: 26rpx;
   height: 26rpx;
 }

/*模块*/
.topic-item {
  background-color: #fff;
  box-shadow: 0 2px 5px #eee;
  overflow: hidden;
  margin-bottom: 40rpx;
}

.topic-text {
  margin: 0;
  padding: 0 30rpx;
}

.topic-title {
  position: relative;
  padding: 10rpx 0 10rpx 0;
  font-size: 16px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #333;
}
