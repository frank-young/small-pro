<!--index.wxml-->
<view class="container">
  <form bindsubmit="formSubmit" bindreset="formReset" class="form">
    <view class="weui-cells__title">基础资料</view>
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">姓名</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" placeholder="请输入姓名"/>
            </view>
        </view>
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">手机号</view>
            </view>
            <view class="weui-cell__bd">
                <input type="tel" class="weui-input" placeholder="请输入手机号" />
            </view>
        </view>
        <view class="weui-cell weui-cell_select">
            <view class="weui-cell__hd weui-cell__hd_in-select-after">
                <view class="weui-label">性别</view>
            </view>
            <view class="weui-cell__bd">
                <picker value="{{sexIndex}}" range="{{sex}}" bindchange="bindSexChange">
                    <view class="weui-select weui-select_in-select-after">{{sex[sexIndex]}}</view>
                </picker>
            </view>
        </view>

        <view class="weui-cell weui-cell_select">
            <view class="weui-cell__hd weui-cell__hd_in-select-after">
                <view class="weui-label">生日</view>
            </view>
            <view class="weui-cell__bd">
                <picker mode="date" value="{{date}}" start="1990-01-01" end="2010-01-01" bindchange="bindDateChange">
                    <view class="weui-select weui-select_in-select-after">{{date}}</view>
                </picker>
            </view>
        </view>

        <view class="weui-cell weui-cell_select">
            <view class="weui-cell__hd weui-cell__hd_in-select-after">
                <view class="weui-label">省份</view>
            </view>
            <view class="weui-cell__bd">
                <picker bindchange="bindProvinceChange" value="{{provinceIndex}}" range-key="name" range="{{provinceArray}}">
                    <view class="weui-select weui-select_in-select-after">{{provinceArray[provinceIndex].name}}</view>
                </picker>
            </view>
        </view>

        <view class="weui-cell weui-cell_select">
            <view class="weui-cell__hd weui-cell__hd_in-select-after">
                <view class="weui-label">城市</view>
            </view>
            <view class="weui-cell__bd">
                <picker bindchange="bindCityChange" value="{{cityIndex}}" range="{{cityArray[provinceIndex]}}">
                    <view class="weui-select weui-select_in-select-after">{{cityArray[provinceIndex][cityIndex]}}</view>
                </picker>
            </view>
        </view>

        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">微信号</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" placeholder="请输入微信号"/>
            </view>
        </view>
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">学校</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" placeholder="学校名称"/>
            </view>
        </view>
    </view>

    <view class="weui-btn-area">
      <button class="weui-btn" bindtap="test" type="primary">确认</button>
    </view>
  </form>
</view>
