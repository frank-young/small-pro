.item-text {
  margin-bottom: 15px;
  font-size: 16px;
  color: #666;
  text-align: left;
}

.head-title {
  position: relative;
  margin-bottom: 30px;
  font-size: 18px;
  color: #666;
  text-align: center;
}
.head-title:before {
  content: '';
  position: absolute;
  bottom: -15px;
  width: 0;
  height: 0;
  left: 50%;
  margin-left: -5px;
  border-color: #ddd #fff  #fff #fff;
  border-style: solid;
  border-width: 5px;
  background-color: #ddd;
}
.head-title:after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: -5px;
  width: 30%;
  height: 1px;
  margin-left: -15%;
  background-color: #ddd;
  -webkit-transform: scale3d(1,.3, 1);
  transform: scale3d(1,.3, 1);
}
.canvas {
  width: 200px;
  margin: 0 auto;
}

