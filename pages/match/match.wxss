.weui-msg {
  padding-top: 0;
}
.userinfo {
  padding: 20px;
  height: 300px;
  margin-bottom: 30px;
  background-color: #f8614a;
  color: #fff;

}
.userinfo-avatar {
  width: 165rpx;
  height: 165rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
}
.nickname {
  text-align: center;
}

.head-title {
  position: relative;
  margin-bottom: 20px;
  font-size: 18px;
  color: #666;
  text-align: center;
}
.head-title:before {
  content: '';
  position: absolute;
  bottom: -15px;
  width: 0;
  height: 0;
  left: 50%;
  margin-left: -5px;
  border-color: #ddd #f8f8f8  #f8f8f8 #f8f8f8;
  border-style: solid;
  border-width: 5px;
  background-color: #ddd;
}
.head-title:after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: -5px;
  width: 30%;
  height: 1px;
  margin-left: -15%;
  background-color: #ddd;
  -webkit-transform: scale3d(1,.3, 1);
  transform: scale3d(1,.3, 1);
}
.canvas {
  width: 200px;
  margin: 0 auto;
}

.weui-msg__text-area {
  padding-bottom: 60px;
}

.signin-wrap {
  position: fixed;
  bottom: -25px;
  width: 100%;
  padding-bottom: 10px;
  background-color: #fff;
  box-shadow: 0 0 1px #ddd;
}
