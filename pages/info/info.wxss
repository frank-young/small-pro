.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 1rpx solid #ccc;
}

icon{
    margin-right: 13px;
}
.icon-box{
    margin: 8px 0;
    padding: 8px 15px;
    display: flex;
    align-items: center;
    background-color: #fff;
}
.icon-box__ctn{
    flex-shrink: 100;
}
.icon-box__title{
    font-size: 20px;
}
.icon-box__desc{
    margin-top: 3px;
    font-size: 12px;
    color: #E64340;
}
.icon_sp_area {
    margin-top: 10px;
    text-align: left;
}
