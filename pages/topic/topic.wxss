.scroll-view {
  height: 100vh;
}
.topic {
  padding: 40rpx;
}

.topic-item {
  background-color: #fff;
  box-shadow: 8rpx 8rpx 20rpx #ddd;
  border-radius: 3px;
  overflow: hidden;
  margin-bottom: 40rpx;
}

.topic-item image {
  width: 100%;
  height:36vw;
  margin: 0;
}

.topic-text {
  margin: -15rpx 0 0 0;
  padding: 0 40rpx;
  border-left: 6rpx solid #ff605d;
}

.topic-title {
  position: relative;
  padding: 30rpx 0 10rpx 0;
  font-size: 16px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #333;
}
.topic-title:after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  display: block;
  width: 100%;
  height: 1px;
  background-color: #ddd;
  transform: scale(1, .3);
}

.topic-desc {
  line-height: 1.7em;
  padding: 10rpx 0 25rpx 0;
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #888;
}
.loading-more {
  font-size: 12px;
  color: #999;
  text-align: center;
}
