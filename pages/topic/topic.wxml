<view class='topic'>
  <block wx:for="{{topics}}" wx:key="key" wx:for-item="topic">
    <navigator url="../topicdetail/topicdetail?id={{topic.id}}" class="topic-item" >
      <image mode="scaleToFill" src="{{topic.src}}"></image>
      <view class="topic-text">
        <view class="topic-title">
          {{topic.title}}
        </view>
        <view class="topic-desc">
          {{topic.desc}}
        </view>
      </view>
    </navigator>
  </block>
  <view class="loading-more" hidden="{{isLoading}}">加载中...</view>
</view>
